<h2>Listing patients</h2>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>Sex</th>
      <th>Diagnosis</th>
  	  <th>Phone Number</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
<tbody>
  <% @patients.each do |patient| %>
    <tr>
      <td><%= patient.first_name %></td>
      <td><%= patient.last_name %></td>
      <td><%= patient.dob %></td>
      <td><%= patient.sex %></td>
      <td><%= patient.diagnosis %></td>
    	<td><%= patient.phone_number %></td>
      <td>    
        <%= link_to patient_path(patient) do %>
          <button class="btn">View Patient</button>
        <% end %>
      </td>
      <td>
        <%= link_to edit_patient_path(patient) do %>
          <button class="btn btn-warning">Edit Patient</button>
        <% end %>
      </td>
      <td>
        <%= link_to patient_path(patient), confirm: 'Are you sure?', method: :delete  do %>
          <button class="btn btn-danger">Delete Patient</button>
        <% end %>
      </td>
      <td>
        <%= link_to patient_log_entries_path(patient) do %>
          <button class="btn btn-info">View Log</button>
        <% end %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>

<div class="form-actions">
    <%= link_to new_patient_path do %>
        <button class="btn">Create New Patient</button>
    <% end %>
</div>