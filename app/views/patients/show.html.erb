<h2>Patient Details</h2>
<br />
<table class="table table-bordered table-striped">
  <tr><th>First Name</th><td><%= @patient.first_name  %></td></tr>
  <tr><th>Last Name</th><td><%= @patient.last_name %></td></tr>
  <tr><th>Date of Birth</th><td><%= @patient.dob %></td></tr>
  <tr><th>Sex</th><td><%= @patient.sex %></tr>
  <tr><th>Diagnosis</th><td><%= @patient.diagnosis %></tr>
  <tr><th>Phone Number</th><td><%= @patient.phone_number %></td></tr>
</table>

<div class="form-actions">
  <%= link_to physician_patients_path(@ph) do %>
    <button class="btn">&lt;&lt; Return to Patients Listing</button>
  <% end %>
  <%= link_to edit_physician_patient_path(@ph, @patient)  do %>
    <button class="btn btn-warning">Edit this Patient</button>
  <% end %>
	<% if session[:physician_id] == 1 %>
		<%= link_to admin_pt_pass_edit_path(:patient_id => @patient.id)  do %>
	    <button class="btn btn-danger">Reset Password</button>
	  <% end %>
	<% end %>
  <%= link_to archive_pt_path(:physician_id => @ph.id, :id => @patient.id), confirm: 'Are you sure?' do %>
    <button class="btn btn-danger">Archive Patient</button>
  <% end %>
</div>
<%= link_to "Deactivate Patient Account", deactivate_message_path(:patient_id => @patient.id, :physician_id => @ph.id), confirm: 'Are you sure you want to deactivate this patient account?'%>